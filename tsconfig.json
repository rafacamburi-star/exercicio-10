{
  "compilerOptions": {
    /* Diretórios */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Ambiente */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Outras saídas */
    "sourceMap": true,
    "declaration": true,

    /* Regras de checagem */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
